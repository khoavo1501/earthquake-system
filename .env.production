# Production Environment Configuration

# IMPORTANT: Change these values for production!
DATABASE_URL=postgresql://postgres:CHANGE_THIS_PASSWORD@postgres:5432/earthquake_db
REDIS_URL=redis://redis:6379

# USGS API
USGS_API_URL=https://earthquake.usgs.gov/fdsnws/event/1/query
FETCH_INTERVAL=300

# Service Ports
DATABASE_API_PORT=8001
DATA_ANALYSIS_PORT=8002
CLUSTERING_PORT=8003
PREDICTION_PORT=8004
FRONTEND_PORT=80

# Frontend API URLs (use your domain)
VITE_DATABASE_API_URL=https://api.yourdomain.com
VITE_ANALYSIS_API_URL=https://api.yourdomain.com
VITE_CLUSTERING_API_URL=https://api.yourdomain.com
VITE_PREDICTION_API_URL=https://api.yourdomain.com

# Security
DEBUG=false
LOG_LEVEL=WARNING

# Database
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD

